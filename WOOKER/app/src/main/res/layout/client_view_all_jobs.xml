<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recent_c_v_a_jobs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewline2" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons_lay_clientviewalljj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageView_langIcon222"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/editTextBG"
            android:padding="8dp"
            android:src="@drawable/ic_job_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_c_v_a_j_select_j_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spanner_bg"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_langIcon222"
            app:layout_constraintTop_toTopOf="@+id/imageView_langIcon222" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_c_v_a_j_s_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/editTextBG"
        android:drawableLeft="@drawable/ic_select_date"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingLeft="8dp"
        android:text="@string/txt_job_date"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/cons_lay_clientviewallj"
        app:layout_constraintEnd_toStartOf="@+id/cons_lay_clientviewallj"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cons_lay_clientviewallj" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/cons_lay_clientviewallj"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageView_langIcon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/editTextBG"
            android:padding="8dp"
            android:src="@drawable/ic_worker_y"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_c_v_a_j_select_worker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spanner_bg"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_langIcon2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_langIcon2"
            app:layout_constraintTop_toTopOf="@+id/imageView_langIcon2" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons_lay_clientviewallj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_c_v_a_j_s_date"
        app:layout_constraintTop_toBottomOf="@+id/cons_lay_clientviewalljj">

        <ImageView
            android:id="@+id/imageView_langIcon22"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/editTextBG"
            android:padding="8dp"
            android:src="@drawable/ic_select_w_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_c_v_a_j_select_w_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spanner_bg"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_langIcon22"
            app:layout_constraintTop_toTopOf="@+id/imageView_langIcon22"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/txt_view_all_jobs"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewline2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/button_signin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layerType="software"
        android:src="@drawable/dash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons_lay_clientviewallj" />

    <ProgressBar
        android:id="@+id/progressBarc_v_a_jobs"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewline2" />

    <Button
        android:id="@+id/btn_reset_c_v_a_j"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/txt_reset"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>